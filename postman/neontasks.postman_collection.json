{
  "info": {
    "name": "NeonTasks API",
    "_postman_id": "neontasks-collection-001",
    "description": "Coleção de requests e testes automáticos para a API NeonTasks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Listar tarefas",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tarefas",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tarefas"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "var body = pm.response.json();",
              "pm.test('Response is an array', function () {",
              "    pm.expect(Array.isArray(body)).to.be.true;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Criar tarefa (salva id)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"texto\": \"Tarefa de teste - {{timestamp}}\" }"
        },
        "url": {
          "raw": "{{baseUrl}}/api/tarefas",
          "host": ["{{baseUrl}}"],
          "path": ["api","tarefas"]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "// gerar timestamp para payload único",
              "pm.environment.set('timestamp', Date.now());"
            ],
            "type": "text/javascript"
          }
        },
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "var json = pm.response.json();",
              "if (json && json.id) {",
              "    pm.environment.set('tarefaId', json.id);",
              "    pm.test('Saved tarefaId', function () { pm.expect(pm.environment.get('tarefaId')).to.not.be.undefined; });",
              "} else {",
              "    pm.test('Response contains id', function () { pm.expect(json.id).to.not.be.undefined; });",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Atualizar tarefa (usa tarefaId)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"texto\": \"Atualizada via Postman\", \"concluida\": true }"
        },
        "url": {
          "raw": "{{baseUrl}}/api/tarefas/{{tarefaId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","tarefas","{{tarefaId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () { pm.response.to.have.status(200); });",
              "var json = pm.response.json();",
              "pm.test('Returned object has same id', function () { pm.expect(json.id).to.eql(pm.environment.get('tarefaId')); });"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Remover tarefa (usa tarefaId)",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tarefas/{{tarefaId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api","tarefas","{{tarefaId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200 or 204', function () { pm.expect([200,204]).to.include(pm.response.code); });",
              "// limpar variável",
              "pm.environment.unset('tarefaId');"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    }
  ]
}
